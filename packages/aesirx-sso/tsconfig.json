{
  "compilerOptions": {
    "listEmittedFiles": false,
    "outDir": "build/lib/types",
    "declaration": true, 
    "declarationMap": true,
    "module": "ESNext",
    "target": "ES6",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": false,
    "sourceMap": true,
    "pretty": true,
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "es2016",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
  },
 
  "include": ["src/**/*", "src/aesirx-lib.d.ts"],
  
  "files": [
    "src/types.d.ts",
  ],
  "exclude": [
    "./node_modules/**/*",
    "./build/**/*",
    "src/sso.tsx",
  ],
}