{
    "env": {
        "es6": true,
        "node": true,
        "commonjs": true,
        "jest": true,
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": "error",
        "no-console": "error",
        "react/prop-types": "off"
    },
    "settings": {
        "react": {
            "version": "17.0.2"
        }
    },
    "parser": "@babel/eslint-parser",
    "ignorePatterns": [
        "*.svg",
        "*.css"
    ]
}
